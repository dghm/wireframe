// YLPM 專案變數設定 - 灰階 Wireframe

// 字型系統
font-family-primary = "Helvetica Neue", Arial, "Microsoft JhengHei", sans-serif
font-size-base = 16px
font-size-small = 0.875rem  // 14px
font-size-large = 1.25rem   // 20px

// 字級階層
font-size-h1 = 2.5rem      // 40px
font-size-h2 = 2rem        // 32px
font-size-h3 = 1.5rem      // 24px
font-size-body = 1rem      // 16px
font-size-button = 0.875rem // 14px

// 灰階色彩系統（僅 Wireframe）
gray-100 = #f5f5f5  // 最淺灰（背景）
gray-200 = #e0e0e0  // 淺灰（邊框）
gray-300 = #bdbdbd  // 中灰（Placeholder）
gray-400 = #9e9e9e  // 深灰（次要文字）
gray-500 = #757575  // 更深灰（主要文字）
gray-600 = #424242  // 最深灰（標題）
gray-700 = #212121  // 極深灰（強調）

text-color = gray-700
text-color-secondary = gray-500
background-color = #ffffff
border-color = gray-200
placeholder-color = gray-300

// 間距系統
spacing-xs = 8px
spacing-sm = 16px
spacing-md = 24px
spacing-lg = 32px
spacing-xl = 48px
spacing-xxl = 64px

// 容器設定
container-max-width = 1200px
container-padding = 24px

// 格線系統（12欄）
grid-columns = 12
grid-gutter = 24px

// 線條粗細
border-width-thin = 1px
border-width-medium = 2px
border-width-thick = 3px

// 斷點
breakpoint-mobile = 768px
breakpoint-tablet = 1024px
breakpoint-desktop = 1200px
