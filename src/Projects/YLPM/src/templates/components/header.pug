// Header Component
mixin header(activePage = '')
  header.header
    .container
      .header-content
        .header-logo
          svg(width="40", height="40", viewBox="0 0 40 40", fill="none")
            circle(cx="20", cy="20", r="18", fill="#DC2626")
            path(d="M12 14L20 8L28 14V26C28 27.1 27.1 28 26 28H14C12.9 28 12 27.1 12 26V14Z", fill="white")
            path(d="M16 18H24V24H16V18Z", fill="#DC2626")
          h1.logo-text YLPM
        
        nav.header-nav
          ul.nav-list
            li.nav-item
              a.nav-link(class=activePage === 'home' ? 'active' : '', href="index.html") 首頁
            // li.nav-item
            //   a.nav-link(class=activePage === 'about' ? 'active' : '', href="about.html") 關於我們
            li.nav-item
              a.nav-link(class=activePage === 'services' ? 'active' : '', href="services.html") 服務項目
            li.nav-item
              a.nav-link(class=activePage === 'projects' ? 'active' : '', href="projects.html") 工程實績
            li.nav-item
              a.nav-link(class=activePage === 'ecosystem' ? 'active' : '', href="ecosystem.html") 生態伙伴
            li.nav-item
              a.nav-link(class=activePage === 'news' ? 'active' : '', href="#") 最新消息
        
        .header-cta
          button.btn.btn--primary 聯絡我們
          .mobile-menu-toggle
            span
            span
            span
