// Footer Component
mixin footer()
  footer.footer
    .container
      .footer-content
        .footer-section
          .footer-logo
            svg(width="32", height="32", viewBox="0 0 40 40", fill="none")
              circle(cx="20", cy="20", r="18", fill="#DC2626")
              path(d="M12 14L20 8L28 14V26C28 27.1 27.1 28 26 28H14C12.9 28 12 27.1 12 26V14Z", fill="white")
