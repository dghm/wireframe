      // Packaging & Monitoring Section
      section.packaging-monitoring-section.section
        .container
          .section-header
            h2.section-title Packaging & Monitoring
            p.section-subtitle Validated packaging and temperature monitoring solutions
          .packaging-monitoring-content
            // Validated Packaging Solutions - 上區：左圖右文字
            .packaging-section
              .packaging-visual
                .packaging-image-placeholder IMAGE
                .packaging-grid
                  .packaging-item
                    .packaging-icon-placeholder ICON
                    .packaging-label 2-8°C
                  .packaging-item
