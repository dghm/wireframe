    color #fff
    border 2px solid #fff

    &:hover
      background-color rgba(255, 255, 255, 0.1)
      border-color rgba(255, 255, 255, 0.8)

// Trust Bar
.trust-bar
  background-color background-color
  padding spacing-lg 0

.trust-bar-content
  display flex
  justify-content space-around
  align-items center
  gap spacing-lg
  flex-wrap wrap

.trust-logo
  flex 1
  min-width 150px
  max-width 200px
  display flex
  justify-content center
  align-items center
