// TailorMed Wireframe 基本樣式

@import 'variables.styl'
@import 'components/header.styl'
@import 'components/footer.styl'
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap')

html
  font-size 1rem

body
  font-family 'Noto Sans', 'PingFang TC', 'Microsoft JhengHei', sans-serif
  margin 0
  background neutral-light
  color neutral-dark

.wireframe
  .container
    layout-container()

.page-content
  display block

.hero-placeholder
  background neutral-light
  padding 120px 0

  .container
    layout-container()
    max-width 960px
    text-align center

.hero
  background linear-gradient(120deg, primary-color 0%, darken(primary-color, 12%) 100%)
  color base-white

  .container
    padding 72px 0 64px

  &__title
    font-size 36px
    font-weight 600
    margin-bottom 16px

  &__subtitle
    font-size 18px
    opacity 0.9
    margin-bottom 32px

  &__cta
    display inline-flex
    align-items center
    gap 12px
    background #fff
    color primary-color
    border none
    border-radius 999px
    padding 14px 28px
    font-weight 600
    text-decoration none
    letter-spacing 0.02em
    transition transform 0.2s ease, box-shadow 0.2s ease, color 0.2s ease

  &__cta:hover
    transform translateY(-2px)
    box-shadow 0 18px 36px rgba(15, 23, 42, 0.2)

  &__cta-text
    display inline-block

  &__cta-icon
    font-size 18px
    transform translateY(1px)
    transition transform 0.2s ease

  &__cta:hover .hero__cta-icon
    transform translate(4px, 1px)

  &__nav-list
    display flex
    gap 24px
    list-style none
    padding 0
    margin 0

  &__nav-list a
    color rgba( base-white, 0.92)
    text-decoration none
    font-weight 500
    transition opacity 0.2s ease

  &__nav-list a:hover
    opacity 1

.main
  background neutral-light

.section
  margin-top 56px

  &__title
    font-size 28px
    margin-bottom 24px
    color primary-color

.grid
  display grid
  grid-template-columns repeat(auto-fit, minmax(240px, 1fr))
  gap 24px

.card
  background base-white
  border 1px solid lighten(primary-color, 50%)
  border-radius 20px
  padding 24px
  box-shadow 0 12px 32px rgba(37, 99, 235, 0.08)

  &__title
    font-size 20px
    margin-bottom 12px
    color primary-color

  &__text
    font-size 15px
    line-height 1.6
    color neutral-gray

.timeline
  list-style none
  padding 0
  margin 0
  display grid
  gap 16px

  &__step
    position relative
    padding 16px 24px
    background base-white
    border-left 4px solid secondary-color
    border-radius 12px
    box-shadow 0 6px 16px rgba(primary-color, 0.12)
    font-weight 500

respond(tablet)
  .hero .container
    padding 56px 0 48px

  .hero__title
    font-size 30px

  .hero__subtitle
    font-size 16px

  .hero__nav-list
    flex-direction column
    gap 12px

  .section__title
    font-size 24px

respond(mobile)
  .site-header .container
    flex-direction column
    gap 16px
    padding 0 16px

  .site-nav .nav-list
    flex-wrap wrap
    justify-content flex-start
    gap 16px

  .header-actions .btn--track
    width 100%
    justify-content center
    margin-top 8px

  .card
    padding 20px
    border-radius 16px

  .timeline__step
    padding 14px 18px

respond(laptop)
  .hero .container
    padding 64px 0 52px

  .grid
    grid-template-columns repeat(auto-fit, minmax(220px, 1fr))


