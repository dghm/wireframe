  .logo-placeholder
    width 100%
    height 60px
    background-color transparent
    border 1px dashed #d0d0d0
    border-radius 4px
    display flex
    align-items center
    justify-content center
    color #999
    font-size font-size-small
    font-weight 500
    filter grayscale(100%)

  &:nth-child(1) .logo-placeholder
    background-color transparent
    border-color #b0b0b0
    color #666

  &:nth-child(2) .logo-placeholder
    background-color transparent
    border-color #a0a0a0
    color #777

  &:nth-child(3) .logo-placeholder
    background-color transparent
    border-color #909090
    color #888

  &:nth-child(4) .logo-placeholder
    background-color transparent
    border-color #808080
    color #999

