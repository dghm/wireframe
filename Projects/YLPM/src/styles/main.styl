// YLPM - 專業工程解決方案網站樣式
// 使用紅色系作為主色系

// 顏色變數 - 紅色主題
primary-red = #DC2626        // 主紅色
secondary-red = #B91C1C      // 深紅色
light-red = #EF4444          // 淺紅色
dark-red = #991B1B           // 深紅
accent-red = #F87171         // 強調紅色

// 中性色
white = #FFFFFF
light-gray = #F9FAFB
gray = #6B7280
dark-gray = #374151
black = #111827

// 背景色
bg-primary = #FFFFFF
bg-secondary = #FEF2F2       // 淺紅背景
bg-tertiary = #FEE2E2        // 更淺的紅背景

// 文字色
text-primary = #111827
text-secondary = #374151
text-muted = #6B7280

// 邊框和陰影
border-color = #FECACA
border-radius = 12px
shadow-sm = 0 1px 2px 0 rgba(0, 0, 0, 0.05)
shadow-md = 0 4px 6px -1px rgba(0, 0, 0, 0.1)
shadow-lg = 0 10px 15px -3px rgba(0, 0, 0, 0.1)
shadow-xl = 0 20px 25px -5px rgba(0, 0, 0, 0.1)

// 字體
font-primary = 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif

// 斷點
mobile = 768px
tablet = 1024px
desktop = 1440px

// 全域重置
*
*::before
*::after
  margin: 0
  padding: 0
  box-sizing: border-box

html
  scroll-behavior: smooth

body
  font-family: font-primary
  line-height: 1.6
  color: text-primary
  background-color: bg-primary
  overflow-x: hidden

// 容器
.container
  max-width: 1200px
  margin: 0 auto
  padding: 0 24px
  
  @media (max-width: mobile)
    padding: 0 16px

// 按鈕系統
.btn
  display: inline-flex
  align-items: center
  justify-content: center
  padding: 12px 24px
  border: none
  border-radius: border-radius
  font-family: font-primary
  font-weight: 500
  text-decoration: none
  cursor: pointer
  transition: all 0.3s ease
  white-space: nowrap
  
  &--primary
    background: primary-red
    color: white
    
    &:hover
      background: secondary-red
      transform: translateY(-2px)
      box-shadow: shadow-lg
  
  &--outline
    background: transparent
    color: primary-red
    border: 2px solid primary-red
    
    &:hover
      background: primary-red
      color: white
      transform: translateY(-2px)
  
  &--large
    padding: 16px 32px
    font-size: 18px
  
  &--full
    width: 100%

// 標頭
.header
  position: fixed
  top: 0
  left: 0
  right: 0
  background: rgba(255, 255, 255, 0.95)
  backdrop-filter: blur(10px)
  border-bottom: 1px solid border-color
  z-index: 100
  
  .container
    padding-top: 16px
    padding-bottom: 16px
  
  .header-content
    display: flex
    align-items: center
    justify-content: space-between
  
  .header-logo
    display: flex
    align-items: center
    gap: 12px
    text-decoration: none
    
    .logo-text
      font-size: 24px
      font-weight: 800
      color: primary-red
      margin: 0
  
  .header-nav
    @media (max-width: tablet)
      position: absolute
      top: 100%
      left: 0
      right: 0
      background: white
      border-top: 1px solid border-color
      transform: translateY(-100%)
      opacity: 0
      visibility: hidden
      transition: all 0.3s ease
      
      &.active
        transform: translateY(0)
        opacity: 1
        visibility: visible
    
    .nav-list
      display: flex
      list-style: none
      gap: 32px
      
      @media (max-width: tablet)
        flex-direction: column
        padding: 24px
        gap: 16px
      
      .nav-item
        .nav-link
          font-weight: 500
          color: text-secondary
          text-decoration: none
          transition: color 0.3s ease
          
          &:hover
          &.active
            color: primary-red
  
  .header-cta
    display: flex
    align-items: center
    gap: 16px
    
    .mobile-menu-toggle
      display: none
      flex-direction: column
      gap: 4px
      cursor: pointer
      
      @media (max-width: tablet)
        display: flex
      
      span
        width: 24px
        height: 2px
        background: primary-red
        transition: all 0.3s ease
        
        &:nth-child(1)
          transform-origin: top left
        &:nth-child(3)
          transform-origin: bottom left
      
      &.active
        span:nth-child(1)
          transform: rotate(45deg)
        span:nth-child(2)
          opacity: 0
        span:nth-child(3)
          transform: rotate(-45deg)

// Hero 區塊
.hero
  position: relative
  min-height: 100vh
  display: flex
  align-items: center
  padding-top: 80px
  overflow: hidden
  
  .hero-background
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: linear-gradient(135deg, #FEF2F2 0%, #FEE2E2 50%, #FECACA 100%)
    
    .hero-overlay
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      background: linear-gradient(135deg, rgba(220, 38, 38, 0.1) 0%, rgba(185, 28, 28, 0.05) 100%)
    
    .hero-pattern
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      opacity: 0.6
  
  .hero-content
    position: relative
    z-index: 2
    text-align: center
    
    .hero-badge
      margin-bottom: 24px
      
      .badge
        display: inline-block
        background: rgba(220, 38, 38, 0.1)
        color: primary-red
        padding: 8px 16px
        border-radius: 24px
        font-size: 14px
        font-weight: 500
    
    .hero-title
      font-size: clamp(40px, 6vw, 72px)
      font-weight: 800
      line-height: 1.1
      margin-bottom: 24px
      color: text-primary
      
      .highlight
        color: primary-red
        display: block
    
    .hero-description
      font-size: 20px
      color: text-secondary
      max-width: 600px
      margin: 0 auto 40px auto
      
      @media (max-width: mobile)
        font-size: 18px
    
    .hero-cta
      display: flex
      gap: 16px
      justify-content: center
      margin-bottom: 60px
      
      @media (max-width: mobile)
        flex-direction: column
        align-items: center
    
    .hero-stats
      display: flex
      gap: 48px
      justify-content: center
      
      @media (max-width: mobile)
        flex-direction: column
        gap: 24px
      
      .stat-item
        text-align: center
        
        .stat-number
          display: block
          font-size: 36px
          font-weight: 800
          color: primary-red
          margin-bottom: 4px
        
        .stat-label
          font-size: 14px
          color: text-muted
          text-transform: uppercase
          letter-spacing: 0.05em

// 區塊標題
.section-header
  text-align: center
  margin-bottom: 60px
  
  .section-tag
    display: inline-block
    background: bg-tertiary
    color: primary-red
    padding: 6px 12px
    border-radius: 20px
    font-size: 14px
    font-weight: 500
    margin-bottom: 16px
  
  .section-title
    font-size: clamp(32px, 5vw, 48px)
    font-weight: 700
    color: text-primary
    margin-bottom: 16px
  
  .section-description
    font-size: 18px
    color: text-secondary
    max-width: 600px
    margin: 0 auto

// 關於我們區塊
.about
  padding: 100px 0
  
  .about-features
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr))
    gap: 40px
    margin-top: 60px
  
  .feature-card
    text-align: center
    padding: 40px 24px
    background: white
    border-radius: border-radius
    box-shadow: shadow-sm
    transition: all 0.3s ease
    
    &:hover
      transform: translateY(-8px)
      box-shadow: shadow-lg
    
    .feature-icon
      margin-bottom: 24px
    
    .feature-title
      font-size: 24px
      font-weight: 600
      color: text-primary
      margin-bottom: 16px
    
    .feature-description
      color: text-secondary
      line-height: 1.6

// 服務區塊
.services
  padding: 100px 0
  background: bg-secondary
  
  .services-grid
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr))
    gap: 40px
    margin-top: 60px
  
  .service-card
    background: white
    border-radius: border-radius
    padding: 40px
    box-shadow: shadow-sm
    transition: all 0.3s ease
    
    &:hover
      transform: translateY(-8px)
      box-shadow: shadow-lg
    
    .service-header
      margin-bottom: 24px
      
      .service-icon
        margin-bottom: 20px
      
      .service-title
        font-size: 28px
        font-weight: 700
        color: text-primary
        margin-bottom: 12px
      
      .service-description
        color: text-secondary
        font-size: 16px
    
    .service-features
      margin-bottom: 24px
      
      .features-list
        list-style: none
        
        li
          padding: 8px 0
          color: text-secondary
          position: relative
          padding-left: 20px
          
          &:before
            content: "✓"
            position: absolute
            left: 0
            color: primary-red
            font-weight: bold
    
    .service-benefits
      .benefit-item
        display: flex
        align-items: center
        gap: 8px
        padding: 12px 16px
        background: bg-tertiary
        border-radius: 8px
        
        .benefit-value
          font-size: 24px
          font-weight: 700
          color: primary-red
        
        .benefit-label
          color: text-secondary
          font-size: 14px

// 工業4.0區塊
.industry
  position: relative
  padding: 100px 0
  background: linear-gradient(135deg, primary-red, secondary-red)
  color: white
  
  .hero-background
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    
    .hero-overlay
      position: absolute
      top: 0
      left: 0
      right: 0
      bottom: 0
      background: rgba(0, 0, 0, 0.3)
  
  .industry-content
    position: relative
    z-index: 2
    
    .section-tag
      background: rgba(255, 255, 255, 0.2)
      color: white
    
    .section-title
    .section-description
      color: white
    
    .industry-features
      display: grid
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))
      gap: 32px
      margin-top: 60px
      
      .industry-feature
        text-align: center
        
        .feature-number
          display: inline-block
          width: 40px
          height: 40px
          background: rgba(255, 255, 255, 0.2)
          color: white
          border-radius: 50%
          line-height: 40px
          font-weight: 700
          margin-bottom: 16px
        
        .feature-title
          font-size: 20px
          font-weight: 600
          margin-bottom: 8px
          color: white
        
        .feature-desc
          color: rgba(255, 255, 255, 0.8)

// 專案區塊
.projects
  padding: 100px 0
  
  .projects-grid
    display: grid
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr))
    gap: 40px
    margin-top: 60px
  
  .project-card
    background: white
    border-radius: border-radius
    overflow: hidden
    box-shadow: shadow-sm
    transition: all 0.3s ease
    
    &:hover
      transform: translateY(-8px)
      box-shadow: shadow-lg
    
    .project-image
      height: 200px
      background: linear-gradient(135deg, bg-tertiary, bg-secondary)
      position: relative
      display: flex
      align-items: center
      justify-content: center
      
      .project-overlay
        .project-category
          background: primary-red
          color: white
          padding: 6px 12px
          border-radius: 20px
          font-size: 12px
          font-weight: 500
    
    .project-content
      padding: 32px
      
      .project-title
        font-size: 24px
        font-weight: 600
        margin-bottom: 12px
        color: text-primary
      
      .project-description
        color: text-secondary
        margin-bottom: 24px
      
      .project-results
        display: flex
        gap: 24px
        
        .result-item
          text-align: center
          
          .result-value
            display: block
            font-size: 24px
            font-weight: 700
            color: primary-red
          
          .result-label
            font-size: 12px
            color: text-muted
            text-transform: uppercase

// 客戶區塊
.clients
  padding: 80px 0
  background: bg-secondary
  
  .clients-logos
    margin-top: 60px
    overflow: hidden
    
    .logo-track
      display: flex
      gap: 60px
      animation: scroll-logos 20s linear infinite
      
      .client-logo
        flex-shrink: 0
        font-size: 18px
        font-weight: 600
        color: text-secondary
        padding: 20px 40px
        background: white
        border-radius: border-radius
        box-shadow: shadow-sm

@keyframes scroll-logos
  0%
    transform: translateX(0)
  100%
    transform: translateX(-100%)

// 聯絡區塊
.contact
  padding: 100px 0
  
  .contact-content
    display: grid
    grid-template-columns: 1fr 1fr
    gap: 80px
    align-items: start
    
    @media (max-width: tablet)
      grid-template-columns: 1fr
      gap: 60px
  
  .contact-methods
    margin-top: 40px
    
    .contact-method
      display: flex
      gap: 16px
      margin-bottom: 32px
      
      .method-icon
        font-size: 24px
      
      .method-content
        .method-title
          font-size: 18px
          font-weight: 600
          margin-bottom: 4px
          color: text-primary
        
        .method-detail
          color: text-secondary
  
  .contact-form
    background: white
    padding: 40px
    border-radius: border-radius
    box-shadow: shadow-md
    
    .form-group
      margin-bottom: 24px
      
      .form-label
        display: block
        font-weight: 500
        margin-bottom: 8px
        color: text-primary
      
      .form-input
      .form-textarea
        width: 100%
        padding: 12px 16px
        border: 2px solid #E5E7EB
        border-radius: 8px
        font-family: font-primary
        transition: border-color 0.3s ease
        
        &:focus
          outline: none
          border-color: primary-red
      
      .form-textarea
        resize: vertical
        min-height: 120px

// 頁腳
.footer
  background: text-primary
  color: white
  padding: 60px 0 24px
  
  .footer-content
    display: grid
    grid-template-columns: 1fr 1fr
    gap: 60px
    margin-bottom: 40px
    
    @media (max-width: tablet)
      grid-template-columns: 1fr
      gap: 40px
  
  .footer-section
    .footer-logo
      display: flex
      align-items: center
      gap: 12px
      margin-bottom: 16px
      
      .footer-title
        font-size: 24px
        font-weight: 800
        color: white
        margin: 0
    
    .footer-description
      color: #9CA3AF
      margin-bottom: 24px
      line-height: 1.6
    
    .social-links
      display: flex
      gap: 16px
      
      .social-link
        color: #9CA3AF
        text-decoration: none
        transition: color 0.3s ease
        
        &:hover
          color: white
  
  .footer-links
    display: flex
    gap: 60px
    
    @media (max-width: mobile)
      flex-direction: column
      gap: 32px
    
    .link-group
      .link-title
        font-size: 16px
        font-weight: 600
        margin-bottom: 16px
        color: white
      
      .link-list
        list-style: none
        
        li
          margin-bottom: 8px
          
          .link
            color: #9CA3AF
            text-decoration: none
            transition: color 0.3s ease
            
            &:hover
              color: white
  
  .footer-bottom
    display: flex
    justify-content: space-between
    align-items: center
    padding-top: 24px
    border-top: 1px solid #374151
    
    @media (max-width: mobile)
      flex-direction: column
      gap: 16px
    
    .footer-copyright
      color: #9CA3AF
      font-size: 14px
    
    .footer-legal
      display: flex
      gap: 24px
      
      .legal-link
        color: #9CA3AF
        text-decoration: none
        font-size: 14px
        transition: color 0.3s ease
        
        &:hover
          color: white

// 響應式調整
@media (max-width: mobile)
  .hero
    min-height: 80vh
    
    .hero-content
      .hero-title
        margin-bottom: 20px
      
      .hero-description
        margin-bottom: 32px
      
      .hero-stats
        margin-top: 40px
  
  .section-header
    margin-bottom: 40px
  
  .about
  .services
  .industry
  .projects
  .contact
    padding: 60px 0

// 動畫效果
@keyframes fadeInUp
  from
    opacity: 0
    transform: translateY(30px)
  to
    opacity: 1
    transform: translateY(0)

.fade-in-up
  animation: fadeInUp 0.6s ease forwards

// 滾動動畫觸發
.animate-on-scroll
  opacity: 0
  transform: translateY(30px)
  transition: all 0.6s ease
  
  &.visible
    opacity: 1
    transform: translateY(0)

