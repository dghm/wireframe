// TailorMed - Professional Cold Chain Logistics Wireframe
// Clean, clinical design inspired by Biocair

// Variables
primary-blue = #0C3058
primary-blue-light = #0C3058
primary-blue-dark = #0C3058
secondary-gray = #64748B
light-gray = #F8FAFC
medium-gray = #E2E8F0
dark-gray = #334155
text-primary = #333
text-secondary = #64748B
text-light = #94A3B8
white = #FFFFFF
border-color = #E2E8F0
shadow-light = 0 1px 3px 0 rgba(0, 0, 0, 0.1)
shadow-medium = 0 4px 6px -1px rgba(0, 0, 0, 0.1)
shadow-large = 0 10px 15px -3px rgba(0, 0, 0, 0.1)

// Typography
font-family = 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif

// Mixins
container()
  max-width 1200px
  margin 0 auto
  padding 0 1rem

flex-center()
  display flex
  align-items center
  justify-content center

flex-between()
  display flex
  align-items center
  justify-content space-between

btn-base()
  display inline-flex
  align-items center
  justify-content center
  padding 0.75rem 1.5rem
  border-radius 0.5rem
  font-family font-family
  font-size 0.875rem
  font-weight 500
  text-decoration none
  border none
  cursor pointer
  transition all 0.2s ease
  white-space nowrap

// Reset and Base Styles
*
  margin 0
  padding 0
  box-sizing border-box

html
  scroll-behavior smooth

body
  font-family font-family
  font-size 16px
  line-height 1.6
  color text-primary
  background-color white
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

// Typography
h1, h2, h3, h4, h5, h6
  font-weight 600
  line-height 1.2
  margin-bottom 1rem
  color text-primary

h1
  font-size 3rem
  font-weight 700
  line-height 1.1

h2
  font-size 2.25rem
  font-weight 600

h3
  font-size 1.5rem
  font-weight 600

h4
  font-size 1.25rem
  font-weight 500

p
  margin-bottom 1rem
  color text-secondary

a
  color primary-blue
  text-decoration none
  transition color 0.2s ease

  &:hover
    color primary-blue-dark

// Container
.container
  container()

// Buttons
.btn
  btn-base()
  
  &--primary
    background-color primary-blue
    color white
    
    &:hover
      background-color primary-blue-dark
      color white
      transform translateY(-1px)
      box-shadow shadow-medium
  
  &--secondary
    background-color white
    color primary-blue
    border 1px solid primary-blue
    
    &:hover
      background-color primary-blue
      color white
      transform translateY(-1px)
      box-shadow shadow-medium
  
  &--large
    padding 1rem 2rem
    font-size 1rem

// Header
.header
  background-color white
  border-bottom 1px solid border-color
  position sticky
  top 0
  z-index 100
  backdrop-filter blur(10px)
  background-color rgba(255, 255, 255, 0.95)

  &__content
    container()
    flex-between()
    padding 1rem 1rem
    min-height 80px

  &__logo
    img
      height 40px
      width auto

  &__nav
    display none
    
    @media (min-width: 768px)
      display block

  &__nav-list
    display flex
    list-style none
    gap 2rem

  &__nav-link
    color text-primary
    font-weight 500
    font-size 0.875rem
    transition color 0.2s ease
    
    &:hover
      color primary-blue

  &__cta
    display none
    
    @media (min-width: 768px)
      display block

// Hero Section
.hero
  position relative
  background linear-gradient(135deg, light-gray 0%, white 100%)
  padding 4rem 0
  min-height 80vh
  overflow hidden

  &__background
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    z-index 1

  &__image-placeholder
    position absolute
    top 50%
    right 10%
    transform translateY(-50%)
    width 300px
    height 300px
    background linear-gradient(135deg, primary-blue 0%, primary-blue-light 100%)
    border-radius 50%
    opacity 0.1
    z-index 1

  &__image-content
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    text-align center
    color primary-blue

  &__icon
    margin-bottom 1rem

  &__temperature-indicator
    text-align center
    
    .temperature-value
      font-size 2rem
      font-weight 700
      color primary-blue
      display block
    
    .temperature-label
      font-size 0.875rem
      color text-secondary
      margin-top 0.5rem

  &__content
    position relative
    z-index 2
    container()
    max-width 800px

  &__title
    font-size 3.5rem
    font-weight 700
    line-height 1.1
    margin-bottom 1.5rem
    color text-primary

  &__subtitle
    font-size 1.25rem
    color text-secondary
    margin-bottom 2rem
    line-height 1.6

  &__cta
    display flex
    gap 1rem
    flex-wrap wrap

// Services Section
.services
  padding 6rem 0
  background-color white

  &__header
    text-align center
    margin-bottom 4rem

  &__title
    font-size 2.5rem
    font-weight 600
    margin-bottom 1rem
    color text-primary

  &__subtitle
    font-size 1.125rem
    color text-secondary
    max-width 600px
    margin 0 auto

  &__grid
    display grid
    grid-template-columns 1fr
    gap 2rem
    
    @media (min-width: 768px)
      grid-template-columns repeat(2, 1fr)
    
    @media (min-width: 1024px)
      grid-template-columns repeat(3, 1fr)

.service-card
  background white
  border 1px solid border-color
  border-radius 1rem
  padding 2rem
  text-align center
  transition all 0.3s ease
  box-shadow shadow-light

  &:hover
    transform translateY(-4px)
    box-shadow shadow-large
    border-color primary-blue

  &__icon
    margin-bottom 1.5rem
    flex-center()

  &__title
    font-size 1.25rem
    font-weight 600
    margin-bottom 1rem
    color text-primary

  &__description
    color text-secondary
    line-height 1.6
    font-size 0.875rem

// Compliance Section
.compliance
  padding 6rem 0
  background-color light-gray

  &__content
    container()
    display grid
    grid-template-columns 1fr
    gap 4rem
    align-items start
    
    @media (min-width: 1024px)
      grid-template-columns 1fr 1fr

  &__title
    font-size 1.5rem
    font-weight 600
    margin-bottom 2rem
    color text-primary

  &__list
    display flex
    flex-direction column
    gap 1.5rem

  &__item
    display flex
    align-items flex-start
    gap 1rem

  &__icon
    flex-shrink 0
    width 32px
    height 32px

  &__text
    h4
      font-size 1rem
      font-weight 600
      margin-bottom 0.5rem
      color text-primary
    
    p
      font-size 0.875rem
      color text-secondary
      margin 0

  &__description
    p
      font-size 1.125rem
      line-height 1.6
      color text-secondary
      margin-bottom 2rem

  &__features
    display grid
    grid-template-columns 1fr
    gap 1rem
    
    @media (min-width: 768px)
      grid-template-columns repeat(2, 1fr)

  &__feature
    display flex
    align-items center
    gap 0.75rem
    font-size 0.875rem
    color text-secondary

  &__feature-icon
    width 20px
    height 20px
    background-color primary-blue
    color white
    border-radius 50%
    flex-center()
    font-size 0.75rem
    font-weight 600
    flex-shrink 0

// Process Section
.process
  padding 6rem 0
  background-color white

  &__header
    text-align center
    margin-bottom 4rem

  &__title
    font-size 2.5rem
    font-weight 600
    margin-bottom 1rem
    color text-primary

  &__subtitle
    font-size 1.125rem
    color text-secondary
    max-width 600px
    margin 0 auto

  &__steps
    display grid
    grid-template-columns 1fr
    gap 2rem
    
    @media (min-width: 768px)
      grid-template-columns repeat(5, 1fr)

  &__step
    text-align center
    position relative

    &:not(:last-child)::after
      content ''
      position absolute
      top 2rem
      left 50%
      width 100%
      height 2px
      background-color medium-gray
      z-index 1
      
      @media (max-width: 767px)
        display none

  &__step-number
    width 4rem
    height 4rem
    background-color primary-blue
    color white
    border-radius 50%
    flex-center()
    font-size 1.25rem
    font-weight 600
    margin 0 auto 1.5rem
    position relative
    z-index 2

  &__step-title
    font-size 1.125rem
    font-weight 600
    margin-bottom 0.75rem
    color text-primary

  &__step-description
    font-size 0.875rem
    color text-secondary
    line-height 1.5

// Why Choose Us Section
.why-choose
  padding 6rem 0
  background-color light-gray

  &__header
    text-align center
    margin-bottom 4rem

  &__title
    font-size 2.5rem
    font-weight 600
    margin-bottom 1rem
    color text-primary

  &__subtitle
    font-size 1.125rem
    color text-secondary
    max-width 600px
    margin 0 auto

  &__features
    display grid
    grid-template-columns 1fr
    gap 2rem
    
    @media (min-width: 768px)
      grid-template-columns repeat(2, 1fr)
    
    @media (min-width: 1024px)
      grid-template-columns repeat(4, 1fr)

.feature-block
  background white
  padding 2rem
  border-radius 1rem
  text-align center
  box-shadow shadow-light
  transition all 0.3s ease

  &:hover
    transform translateY(-2px)
    box-shadow shadow-medium

  &__icon
    margin-bottom 1.5rem
    flex-center()

  &__title
    font-size 1.125rem
    font-weight 600
    margin-bottom 1rem
    color text-primary

  &__description
    font-size 0.875rem
    color text-secondary
    line-height 1.5

// Contact Section
.contact
  padding 6rem 0
  background-color white

  &__content
    container()
    max-width 800px

  &__form
    background light-gray
    padding 3rem
    border-radius 1rem
    box-shadow shadow-light

  &__title
    font-size 2rem
    font-weight 600
    margin-bottom 1rem
    color text-primary
    text-align center

  &__subtitle
    font-size 1.125rem
    color text-secondary
    margin-bottom 2rem
    text-align center

.contact-form
  display grid
  gap 1.5rem

  &__group
    display flex
    flex-direction column

  &__label
    font-weight 500
    margin-bottom 0.5rem
    color text-primary
    font-size 0.875rem

  &__input,
  &__textarea
    padding 0.75rem 1rem
    border 1px solid border-color
    border-radius 0.5rem
    font-family font-family
    font-size 0.875rem
    transition border-color 0.2s ease
    background-color white

    &:focus
      outline none
      border-color primary-blue
      box-shadow 0 0 0 3px rgba(37, 99, 235, 0.1)

  &__textarea
    resize vertical
    min-height 120px

  &__submit
    margin-top 1rem

// Footer
.footer
  background-color dark-gray
  color white
  padding 4rem 0 2rem

  &__content
    container()
    display grid
    grid-template-columns 1fr
    gap 2rem
    margin-bottom 3rem
    
    @media (min-width: 768px)
      grid-template-columns repeat(2, 1fr)
    
    @media (min-width: 1024px)
      grid-template-columns repeat(5, 1fr)

  &__section
    h4
      color white
      margin-bottom 1rem
      font-size 1rem
      font-weight 600

  &__logo
    margin-bottom 1rem
    
    img
      height 32px
      width auto

  &__description
    color text-light
    font-size 0.875rem
    line-height 1.5
    margin-bottom 1.5rem

  &__links
    list-style none

  &__link-item
    margin-bottom 0.5rem

  &__link
    color text-light
    font-size 0.875rem
    transition color 0.2s ease
    
    &:hover
      color white

  &__contact
    .footer__contact-item
      margin-bottom 1rem
      font-size 0.875rem
      line-height 1.5
      color text-light
      
      strong
        color white
        display block
        margin-bottom 0.25rem

  &__newsletter
    display flex
    gap 0.5rem
    margin-top 1rem

  &__newsletter-text
    color text-light
    font-size 0.875rem
    margin-bottom 1rem

  &__newsletter-input
    flex 1
    padding 0.5rem 0.75rem
    border 1px solid #475569
    border-radius 0.375rem
    background-color #334155
    color white
    font-size 0.875rem
    
    &::placeholder
      color text-light

  &__newsletter-btn
    padding 0.5rem 1rem
    background-color primary-blue
    color white
    border none
    border-radius 0.375rem
    font-size 0.875rem
    font-weight 500
    cursor pointer
    transition background-color 0.2s ease
    
    &:hover
      background-color primary-blue-dark

  &__bottom
    border-top 1px solid #475569
    padding-top 2rem
    container()
    flex-between()
    flex-wrap wrap
    gap 1rem

  &__certifications
    display flex
    gap 1rem
    align-items center

  &__cert-item
    img
      width 40px
      height 40px
      border-radius 50%
      background-color white
      padding 0.5rem

  &__copyright
    color text-light
    font-size 0.875rem

// Responsive Design
@media (max-width: 767px)
  .hero
    &__title
      font-size 2.5rem
    
    &__cta
      flex-direction column
      align-items stretch

  .services
    &__grid
      grid-template-columns 1fr

  .compliance
    &__content
      grid-template-columns 1fr

  .process
    &__steps
      grid-template-columns 1fr

  .why-choose
    &__features
      grid-template-columns 1fr

  .footer
    &__content
      grid-template-columns 1fr
    
    &__bottom
      flex-direction column
      text-align center

// Print Styles
@media print
  .header,
  .footer
    display none
  
  .hero
    padding 2rem 0
    min-height auto
  
  .services,
  .compliance,
  .process,
  .why-choose,
  .contact
    padding 2rem 0
